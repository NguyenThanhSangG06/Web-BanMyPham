@model Store.Models.Role

@{
    ViewData["Title"] = "Thông tin quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminRoles" asp-action="Index">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Thông tin quyền truy cập</span>
        </nav>
    </div>
</div>

<div class="table-responsive">
    <table class="product-info-table m-t-0">
        <tbody>
            <tr>
                <td scope="row">ID:</td>
                <td>@Model.RoleId</td>
            </tr>
            <tr>
                <td scope="row">Tên truy cập:</td>
                <td>@Model.RoleName</td>
            </tr>
            <tr>
                <td scope="row">Mô Tả:</td>
                <td>@Model.Description</td>
            </tr>
        </tbody>
    </table>
</div>
<div>
    <a class="btn btn-primary rounded-pill" asp-action="Index">Back to List</a>
</div>